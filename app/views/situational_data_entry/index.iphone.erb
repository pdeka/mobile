<div class="lmb_title"><b>Situational Data</b></div>

<% form_tag '/situational_data_entry/create' do %>

    <p>Where are you?</p>
    <p><%= text_field_tag  'location', nil, :maxlength => 15, :size => 20 %></p>

    <p>Who are you with?</p>
    <p><%= text_field_tag  'accompanying_people', nil, :maxlength => 15, :size => 20 %></p>

    <p>Has anything significant happened since your last rating?</p>
    <p>Yes&nbsp;<%= radio_button_tag 'answer', 'yes', false%>&nbsp;&nbsp;No&nbsp;<%= radio_button_tag 'answer', 'no', true%></p>
    
    <p><%= submit_tag 'Submit', :class => 'un_ltt_button' %></p>

<% end %>
